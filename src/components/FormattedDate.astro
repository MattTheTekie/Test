---
interface Props {
  pre: string;
  date: Date;
}

const { pre, date, precise } = Astro.props;
---

<time style={precise} datetime={date.toISOString()}>
  <h3 style="font-size:15px; margin:3px;">
    <b>{pre}</b>
    {
      date.toLocaleDateString("en-uk", {
        year: "numeric",
        month: "short",
        day: "numeric"
      })
    }
  </h3>
</time>

<style>
  time {
    top: 15px;
    right: 15px;
    color: white;
    transform: translate(0%, 0);
    padding: 5px;
    padding-left: 15px;
    padding-right: 15px;
    background-color: #0000005c;
    backdrop-filter: blur(8px);
    border-radius: 8px;
    font-family:
      systemui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    z-index: 10;
    position: absolute;
  }
</style>
