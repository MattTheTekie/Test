---
import { changeLanguage } from "i18next";

changeLanguage("vi");
---

<img id="gameArtwork" src="" alt="Game Artwork">

<script is:inline>
const gameId = 'SSQP01'; // Replace with the ID of the specific Wii game
const apiUrl = `https://api.gametdb.com/Wii/${gameId}`;

fetch(apiUrl)
  .then(response => response.json())
  .then(data => {
    // Handle the response data to extract the artwork URL or other relevant information
    const artworkUrl = data.artwork; // Example: Assuming the artwork URL is available in the response
    // Use the artwork URL in your website
    // Example: Display the image on the webpage
    const imageElement = document.getElementById('gameArtwork');
    imageElement.src = artworkUrl;
  })
  .catch(error => {
    // Handle errors if the API request fails
    console.error('Error fetching data:', error);
  });
</script>